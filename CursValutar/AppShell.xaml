<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CursValutar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CursValutar"
    xmlns:views="clr-namespace:CursValutar.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="CursValutar">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Currency Converter"
        ContentTemplate="{DataTemplate views:ConverterPage}"
        Route="ConverterPage" />

    <ShellContent
        Title="Currency History"
        ContentTemplate="{DataTemplate views:HistoryPage}"
        Route="HistoryPage" />
    
    <ShellContent
         Title="Settings"
         ContentTemplate="{DataTemplate views:SettingsPage}"
         Route="SettingsPage" />

    <ShellContent
        Title="About the App"
        ContentTemplate="{DataTemplate views:AboutPage}"
        Route="AboutPage" />

</Shell>
